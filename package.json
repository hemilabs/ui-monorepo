{
  "name": "ui-monorepo",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "format:check": "prettier --check .",
    "lint": "eslint --cache .",
    "postinstall": "patch-package"
  },
  "workspaces": [
    "claim-tokens",
    "hemi-metadata",
    "landing",
    "migrations-pg",
    "ui-common",
    "wagmi-erc20-hooks",
    "webapp"
  ],
  "devDependencies": {
    "@commitlint/cli": "18.4.3",
    "@types/mocha": "10.0.6",
    "@typescript-eslint/eslint-plugin": "6.16.0",
    "@typescript-eslint/parser": "6.16.0",
    "chai": "4.4.1",
    "eslint": "8.56.0",
    "eslint-config-bloq": "4.0.0",
    "eslint-plugin-html": "7.1.0",
    "eslint-plugin-markdownlint": "0.5.0",
    "husky": "4.3.8",
    "lint-staged": "15.2.0",
    "mocha": "10.3.0",
    "patch-package": "8.0.0",
    "prettier": "3.1.1",
    "prettier-plugin-tailwindcss": "0.5.9"
  },
  "commitlint": {
    "rules": {
      "body-case": [
        2,
        "always",
        [
          "sentence-case"
        ]
      ],
      "body-leading-blank": [
        1,
        "always"
      ],
      "header-max-length": [
        2,
        "always",
        50
      ],
      "header-case": [
        2,
        "always",
        [
          "sentence-case"
        ]
      ],
      "header-full-stop": [
        2,
        "never",
        "."
      ]
    }
  },
  "eslintConfig": {
    "extends": [
      "bloq",
      "prettier"
    ],
    "ignorePatterns": [
      "landing/fullview.*",
      "landing/app.css",
      "landing/globals.css"
    ],
    "overrides": [
      {
        "extends": [
          "bloq/node",
          "prettier"
        ],
        "files": [
          "claim-tokens/**/*.js"
        ]
      },
      {
        "extends": [
          "bloq/next",
          "plugin:@typescript-eslint/eslint-recommended",
          "plugin:@typescript-eslint/recommended",
          "next/core-web-vitals",
          "prettier"
        ],
        "files": [
          "hemi-metadata/**/*.{js,ts,tsx}",
          "ui-common/**/*.{js,ts,tsx}",
          "wagmi-erc20-hooks/**/*.{js,ts,tsx}",
          "webapp/**/*.{js,ts,tsx}"
        ],
        "parser": "@typescript-eslint/parser",
        "plugins": [
          "@typescript-eslint"
        ],
        "settings": {
          "next": {
            "rootDir": [
              "webapp"
            ]
          }
        }
      },
      {
        "extends": [
          "plugin:@typescript-eslint/eslint-recommended",
          "plugin:@typescript-eslint/recommended",
          "prettier"
        ],
        "files": [
          "migrations-pg/**/*.{js,ts}"
        ],
        "parser": "@typescript-eslint/parser",
        "plugins": [
          "@typescript-eslint"
        ],
        "rules": {
          "no-console": "off"
        }
      },
      {
        "extends": [
          "plugin:@typescript-eslint/eslint-recommended",
          "plugin:@typescript-eslint/recommended",
          "prettier"
        ],
        "files": [
          "*.d.ts"
        ]
      },
      {
        "files": [
          "*.spec.js"
        ],
        "extends": [
          "bloq/mocha",
          "prettier"
        ],
        "rules": {
          "mocha/no-exclusive-tests": "error",
          "no-unsafe-finally": "off",
          "prefer-arrow/prefer-arrow-functions": "off",
          "promise/no-return-in-finally": "off"
        }
      },
      {
        "env": {
          "browser": true,
          "jquery": true
        },
        "extends": [
          "bloq",
          "prettier"
        ],
        "files": [
          "landing/**/*.{css,html,js}"
        ],
        "globals": {
          "$": true,
          "document": true,
          "hbspt": true
        },
        "plugins": [
          "eslint-plugin-html"
        ]
      },
      {
        "files": [
          "*.md"
        ],
        "extends": [
          "plugin:markdownlint/recommended"
        ],
        "parser": "eslint-plugin-markdownlint/parser",
        "rules": {
          "markdownlint/md001": "warn",
          "markdownlint/md004": [
            "warn",
            {
              "style": "asterisk"
            }
          ],
          "markdownlint/md010": "warn",
          "markdownlint/md013": "off",
          "markdownlint/md014": "warn",
          "markdownlint/md024": [
            "warn",
            {
              "siblings_only": true
            }
          ],
          "markdownlint/md028": "warn",
          "markdownlint/md029": "warn",
          "markdownlint/md033": [
            "warn",
            {
              "allowed_elements": [
                "img"
              ]
            }
          ],
          "markdownlint/md034": "warn",
          "markdownlint/md040": "warn",
          "markdownlint/md041": "warn",
          "markdownlint/md045": "warn"
        }
      }
    ],
    "root": true
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,md,ts,tsx}": "eslint --cache --fix --quiet",
    "*.{css,html,js,json,md,ts,tsx,vue,yaml,yml}": "prettier --write"
  },
  "prettier": {
    "arrowParens": "avoid",
    "quoteProps": "consistent",
    "semi": false,
    "singleQuote": true,
    "tabWidth": 2,
    "plugins": [
      "prettier-plugin-tailwindcss"
    ]
  },
  "mocha": {
    "timeout": 5000
  }
}
